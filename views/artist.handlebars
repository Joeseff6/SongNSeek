<section class="artist">
    <div class="row">
    {{#each artists as |artist|}}
        <div class="col">
            <img class="mt-3 image" src="{{artist.artist_image_med}}">
            <a href="/library/artists/{{artist.id}}" class="artist-name d-block">{{artist.artist_name}}</a>
            <div class="artist-details">
            </div>
        </div>
    {{/each}}
    </div>


    {{#if artist}}
    <img class="image" src="{{artist.artist_image_big}}">
    <h1 class="artist-name">{{artist.artist_name}}</h1>
    <div class="artist-details">

    </div>
    {{/if}}
</section>